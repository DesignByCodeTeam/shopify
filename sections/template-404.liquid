<h1 class="text-7xl font-black">
  {{ section.settings.heading }}
</h1>
<div class="prose">
  {{ section.settings.richtext }}
</div>

<button is="headless-goback" class="px-4 my-2 inline-block py-2 rounded-md border border-gray-300 hover:bg-gray-200 text-gray-500">
  Go back to previous page
</button>




{% schema %}
{
  "name": "Template 404",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading text",
      "default": "Error: 404"
    },
    {
      "type": "richtext",
      "id": "richtext",
      "label": "Richtext text",
      "default": "<p>Sorry! the page you are looking for does not exist.</p>"
    }
  ]
}
{% endschema %}
