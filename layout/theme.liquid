<!doctype html>
<html class="no-js h-full bg-gray-100 scroll-smooth" lang="{{ request.locale.iso_code }}">
<head>
    {% render 'helmet' %}
    {% render 'meta-tags' %}
    {{ content_for_header }}
</head>

<body class="h-full flex flex-col min-h-screen overflow-x-hidden">
{% comment %}<div aria-hidden="true" class="dotted fixed inset-0 -z-10 opacity-5"></div>{% endcomment %}
<a class="sr-only focus:not-sr-only focus:fixed bg-white focus:top-2 focus:left-2 focus:inline-block focus:p-3" href="#main">Skip to main</a>

{% section 'main-navigation' %}
{% render 'title-bar', title: page_title %}
<main id="main" class="block flex-1">
    <div class="my-12">
        {{ content_for_layout }}
    </div>
</main>
{% section 'main-footer' %}
{% render 'bootstrap' %}


<button class="fixed z-40 bottom-10 right-10 bg-gray-100 border border-gray-300 flex justify-center items-center h-10 w-10 rounded-md hover:bg-gray-300" type="button" is="headless-scrolltop">
  <span class="sr-only">
    Scroll to top
  </span>
  <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
    <path fill-rule="evenodd" d="M14.707 12.707a1 1 0 01-1.414 0L10 9.414l-3.293 3.293a1 1 0 01-1.414-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 010 1.414z" clip-rule="evenodd" />
  </svg>

</button>


</body>
</html>